<%= form_tag "/event" do %>
<div class = "container">

<h1>Add New Event</h1>
<%= label_tag "Event Title" %><br>
<%= text_field_tag "title", "", size: 45 %><br>
<%= label_tag "Event Details" %><br>
<%= text_area_tag "event", "", rows: 3, cols: 50 %><br>
<%= label_tag "URL" %><br>
<%= text_field_tag "url", "", size: 45 %><br><br>
<%= submit_tag "Submit New Event" %>
</div>

<% end %> 
